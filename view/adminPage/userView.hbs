{{>headerAdmin}}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="font-size: 30px; font-weight: bold;">User View</h4>
                        {{!-- <p class="card-description"> Add class <code>.table-striped</code> </p> --}}
                        <form class="ml-auto search-form d-none d-md-block" style="width: 300px;" action="/userSearch">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search user full name here."
                                    name="fullname">
                            </div>

                        </form>
                        {{#if message}}
                        <span
                            style="display: block;background-color: #e45052; padding: 0.75rem; border-radius: 0.25rem; color: #fff;font-size:14px"
                            onclick="this.remove()">{{message}}</span>
                        {{!-- ultimate error message right here --}}
                        {{/if}}
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th> Username </th>
                                    <th> Fullname </th>
                                    <th> Email </th>
                                    <th> Birthday </th>
                                    <th> Gender </th>
                                    <th style="width: 100px!important;"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each User}}
                                <tr>
                                    <td> {{this.username}} </td>
                                    <td> {{this.fullname}} </td>
                                    <td> {{this.email}} </td>
                                    <td> {{this.birthday}} </td>
                                    <td> {{this.gender}} </td>
                                    <td>
                                        <a href="/accountDelete/{{this.id}}" class="btn btn-danger"
                                            onclick="return confirm('Confirm delete?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>
<!-- main-panel ends -->
</div>
<!-- page-body-wrapper ends -->
</div>
