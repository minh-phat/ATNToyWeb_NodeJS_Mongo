{{>headerAdmin}}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title" style="font-size: 30px; font-weight: bold;">Category View</h4>
            {{!-- <p class="card-description"> Add class <code>.table-striped</code> </p> --}}
            <form class="ml-auto search-form d-none d-md-block" style="width: 300px;" action="/categorySearch">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search category name here" name="category_name">
              </div>

            </form>
            <p>
            <div style="width: 100%; height: 30px;">
              <button type="button" class="btn btn-primary" style="position: absolute; right: 16px"><a
                  href="/categoryInsert" style="text-decoration: none; color: inherit;">Add new</a></button>
            </div>
            </p>

            <table class="table table-striped">
              <thead>
                <tr>
                  <th> Image </th>
                  <th> Category Name </th>
                  <th style="width: 100px!important;"> Action </th>
                </tr>
              </thead>
              <tbody>
                {{#each Categories}}
                <tr>
                  <td class="py-1">
                    <img src="/img/categories/{{this.image}}" alt="image" />
                  </td>
                  <td> {{this.category_name}} </td>
                  <td>
                    <a href="/categoryEdit{{this.id}}" class="btn btn-info">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="/categoryDelete/{{this.id}}" class="btn btn-danger"
                      onclick="return confirm('Confirm delete?')">
                      <i class="fas fa-trash-alt"></i>
                    </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- content-wrapper ends -->
</div>
<!-- main-panel ends -->
</div>
<!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
